<UserControl x:Class="_1on1Server.Server"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_1on1Server"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid >

        <TextBox x:Name="textField" Margin="0,0,0,40" TextWrapping="Wrap" AcceptsTab="True" ScrollViewer.CanContentScroll="True" IsReadOnly="True" VerticalScrollBarVisibility="Visible"/>
        <TextBox x:Name="inputField" Margin="0,0,79,0" VerticalAlignment="Bottom" Height="40" TextWrapping="Wrap" KeyDown="OnKeyDown" KeyUp="OnKeyUp"/>
        <Button x:Name="sendButton" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="79" Height="40" Content="Send" RenderTransformOrigin="0.509,1.131"/>

    </Grid>
</UserControl>
